<% if can? :read, @customer %>
<div class="row">
     <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
         <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title"><%= @customer.full_name %></h3>
            </div>
            <div class="panel-body">
              <div class="row">
                    <div class="col-md-3 col-lg-3 " align="center">
                        <% if @customer.image? %>
                           <%= image_tag @customer.image_url(:thumb), :class => "profile_image" %>
                        <% else %>
                           <img alt="image" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=100" class="img-circle">
                        <% end %>
                    </div>
                    <div class=" col-md-9 col-lg-9 ">
                        <table class="table table-user-information">
                          <tbody>
                            <tr>
                              <td><%= t(:address) %></td>
                              <td><%= @customer.city %>, <%= @customer.zipcode  %></td>
                            </tr>
                            <tr>
                              <td><%= t(:wedding_date) %></td>
                              <td><%= distance_of_time_in_words(Time.now,@customer.wedding_date) %></td>
                            </tr>
                            <tr>
                              <td><%= t(:phone) %></td>
                              <td><%= @customer.phone %><br><br>
                              </td>
                            </tr>
                          </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="panel-footer" style="height:43px">
                <span class="pull-right">
                    <% if can? :update, @customer %>
                      <%= link_to edit_customer_path(@customer.slug) ,class: "btn btn-sm btn-warning" do %>
                        <i class="glyphicon glyphicon-edit" data-original-title="<%= t('links.edit') %>" data-toggle="tooltip"  ></i>
                      <% end %>
                    <% end %>
                    <% if can? :destroy, @customer %>
                      <a data-original-title="<%= t('links.destroy') %>" data-toggle="tooltip" type="button" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
                    <% end %>
                </span>
            </div>
            <div class="row" id="address_show">
                <div class="col-md-12">
                      <%= image_tag "http://maps.google.com/maps/api/staticmap?size=400x300&sensor=false&zoom=16&markers=#{@customer.latitude}%2C#{@customer.longitude}" %>
                </div>
            </div>
        </div>
    </div>
</div>
<% end %>