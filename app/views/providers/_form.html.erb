<%= render :partial => "shared/errors", :locals => {:errors => @provider.errors} %>

<%= form_for @provider, :remote => true, :html => {:'data-type' => 'json',role: "form" ,id: "provider_form",:class => "form-horizontal"} do |f| %>

	<div class="form-group" >
	    <%= f.label t(:first_name), :class => 'control-label col-lg-2' %>
	    <div class="col-lg-10">
	      <%= f.text_field :first_name, id: :first_name, autofocus: true, :class => 'form-control' %>
	    </div>
  	</div>
  	<div class="form-group">
	    <%= f.label t(:last_name), :class => 'control-label col-lg-2' %>
	    <div class="col-lg-10">
	      <%= f.text_field :last_name, id: :last_name, :class => 'form-control' %>
	    </div>
  	</div>
  	<div class="form-group">
	    <%= f.label t(:image_provider), :class => 'control-label col-lg-2' %>
	    <div class="col-lg-10">
	      <%= f.file_field :image, :class => 'form-control' %>
	    </div>
  	</div>
	<div class="form-group">
	    <%= f.label t(:years_experience), :class => 'control-label col-lg-2' %>
	    <div class="col-lg-10">
	      <%= f.number_field :age, id: :age, :class => 'form-control' %>
	    </div>
  	</div>
  	<div class="form-group">
	    <%= f.label t(:profession), :class => 'control-label col-lg-2' %>
	    <div class="col-lg-10">
	      <%= f.text_field :profession_list, :class => 'form-control', placeholder: t(:profession_hint) %>
	    </div>
  	</div>
  	<div class="form-group">
  		<%= f.label t(:experience), :class => 'control-label col-lg-2' %>
  		<div class="col-lg-10">
	      <%= f.text_area :experience, :class => 'form-control' %>
	    </div>
  	</div>
    <div class="form-group">
      <%= f.label :facebook, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :facebook, :class => 'form-control', placeholder: t(:facebook_hint) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :instagram, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :instagram, :class => 'form-control', placeholder: t(:instagram_hint) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :twitter, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :twitter, :class => 'form-control', placeholder: t(:twitter_hint) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :website, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :website, :class => 'form-control', placeholder: t(:website_hint) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "Video", :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :video_url, :class => 'form-control', placeholder: t(:video_hint), onblur: "youtube_id_from_url($(this).val())" %>
      </div>
    </div>

  	<%= f.fields_for :addresses  do |a| %>

	    <%= render :partial => "address", :locals => {:f => a} %>

    <% end %>
    <div class="form-group">
	    <div id = "addresses" class="col-lg-12"></div>
	  </div>
    <div class="form-group">
    	<div class="col-lg-offset-2 col-lg-10">
		    <%= link_to_add_fields(t('links.new_address'), f , :addresses) %>
	    </div>
    </div>


    <div class='notifications bottom-right'></div>
	  <div class="form-group" id="controls">
	    <div class="col-lg-offset-2 col-lg-10">
	      <%= f.submit t('links.save'), :class => 'btn btn-primary' %>
	      <%= link_to t('links.cancel'), root_path, :class => 'btn btn-default' %>
	    </div>
  	</div>

<% end %>