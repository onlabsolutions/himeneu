<h1>Encontre o melhor profissional para seu casamento</h1>

<% @providers.each do |p| %>
	<div class="row">
		<div class="col-md-8 col-lg-6">
	    	 <div class="well profile">
	            <div class="col-sm-12">
	                <div class="col-xs-12 col-sm-8">
	                    <h2><%= link_to p.first_name+" "+p.last_name, p%></h2>
	                    <p><strong><%= t(:experience) %>: </strong> <%= p.experience %> </p>
	                    <p><strong>Skills: </strong>
	                    	<% p.profession_list.each do |s| %>
		                        <span class="tags"><%= s %></span>
	                        <% end %>
	                    </p>
	                </div>
	                <div class="col-xs-12 col-sm-4 text-center">
	                    <figure>
	                        <%= image_tag p.image_url(:thumb), class: "img-circle img-responsive" %>
	                        <figcaption class="ratings">
	                           <div id="provider_rating" data-score="<%= p.score %>" ></div>
	                        </figcaption>
	                    </figure>
	                </div>
	            </div>
	    	 </div>
		</div>
	</div>
<% end %>
