<% if can? :search, Provider %>
<div class="divide40"></div>
<div class="container" ng-controller="SearchCtrl" class="filter-form container">
    <div class="row">
        <div class="col-md-8 margin30">
          <div class="row margin30">
              <div class="col-md-4">
                  <form method="post" action="#">
                      <select class="form-control">
                          <option>Sorting by Price</option>
                          <option>Sort by price: low to high</option>
                          <option>Sort by price: high to low</option>
                      </select>
                  </form><!--shorting form end-->
              </div>
          </div>
          <div class="loader" data-initialize="loader" data-ng-show="loading">
