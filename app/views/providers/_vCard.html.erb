<div class="container-fluid">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="row">
      <div class="col-md-4">
          <% if @provider.image? %>
              <%= image_tag @provider.image_url(:regular), :class => "img-responsive" %>
          <% else %>
              <img alt="User Pic" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=100" class="img-responsive">
          <% end %>
      </div>
      <div class="col-md-8">
        <div class="tab-content">
          <div class="tab-pane active" id="about">
              <h3><%= @provider.full_name %></h3>
              <hr>
              <p><%= @provider.experience %></p>
              <p class"hidden-xs"><strong class="hidden-xs">Servi√ßo(s) oferecido(s): </strong>
              <% @provider.profession_list.each do |p| %>
               <span class="tags hidden-xs" ng-class"tags hidden-xs">
                 <%= p %>
               </span>
              <% end %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>