<% content_for :meta_tag do %>
  <title>Himeneu - <%= @provider.full_name %></title>
  <meta name="ROBOTS" content="index,follow">
  <meta name="description" content="<%= @provider.experience %>">
  <meta property="og:type" content="website">
  <meta name="keywords" content="<%= @provider.profession_list.join(' ,') %>">
  <meta property="og:image" content="<%= @provider.image_url(:regular) %>" />
  <meta property="og:url" content="<%= provider_url(@provider) %>"/>
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:title" content='Himeneu - <%= @provider.full_name %>' />
  <meta name="twitter:description" content="Himeneu | <%= @provider.full_name %>" />
  <meta name="twitter:image" content="<%= @provider.image_url(:regular) %>" />
  <meta name="twitter:url" content="<%= provider_url(@provider) %>" />
<% end %>

<div class="divide60"></div>
<div class="container">
  <div class="row">
    <div class="col-md-6 margin20">
        <h3 class="heading"><%= @provider.full_name %></h3>
        <p>
          <%= @provider.experience %>
        </p>
        <p>
          <%= link_to t(:view_detail), new_user_session_path, :class => "btn border-black btn-lg"  %>
        </p>
    </div>
    <div class="col-md-6">
      <% if @provider.image? %>
        <%= image_tag @provider.image_url(:list),
        alt: @provider.full_name,
        :class => "img-responsive" %>
      <% else %>
        <img alt="User Pic" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=400" class="img-responsive">
      <% end %>
    </div>
  </div>
</div>
