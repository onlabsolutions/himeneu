<!DOCTYPE html>
<html>
<head>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="ONLab">
    <meta name="msvalidate.01" content="7E18800C43DF85C72AA2B64038A26451" />
    <% if content_for?(:meta_tag) %>
      <%= yield(:meta_tag) %>
    <% end %>
    <%= favicon_link_tag 'favicon.ico' %>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body ng-app="App" class='<%= controller.controller_name %> '>
  <div class='notifications top-right'></div>
     <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to root_path, :class => "navbar-brand" do %>
                    <%= image_tag("logo_himeneu.png", class: "logo-navbar") %>
                <% end %>

            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <% if  user_signed_in?  %>
                        <% if current_user.is_completed %>
                            <% if can? :search, Customer %>
                              <li><%= link_to customers_path do %>
                                     <%= t(:bride) %>
                                     <i class="fa fa-heart"></i>
                                  <% end %>
                              </li>
                            <% end %>
                            <% if can? :search, Provider %>
                              <li><%= link_to providers_path do %>
                                      <%= t(:workers) %>
                                      <i class="fa fa-users"></i>
                                  <% end %>
                              </li>
                            <% end %>
                        <% end %>
                        <li><%= link_to redirect_to_profile do %>
                                <%= t(:my_profile) %>
                                <span class="glyphicon glyphicon-user"></span>
                            <% end %>
                        </li>
                        <li><%= link_to destroy_user_session_path,  method: :delete do %>
                                <%= t(:logout).capitalize %>
                                <span class="glyphicon glyphicon-off"></span>
                            <% end %>
                        </li>
                    <% else %>
                        <li><%= link_to 'Contato', dashboard_path+"#contato"%></li>
                        <li><%= link_to t(:sign_up).capitalize, new_user_registration_path %></li>
                        <li><%= link_to t(:login).capitalize, new_user_session_path %></li>
                    <% end %>
                </ul>
            </div>
        </div>
    </nav>


  <% if flash[:notice] %>
     <%= content_tag "script", id: "msg",type: "text/javascript",data: flash[:notice] do %>
       var msg = $('#msg').attr('data');
       showFlashMessage(msg, 'bangTidy', 3000);
     <% end %>
  <% end %>

  <% if flash[:alert] %>
    <%= content_tag "script", id: "msg",type: "text/javascript",data: flash[:alert] do %>
       var msg = $('#msg').attr('data');
       showFlashMessage(msg, 'danger', 3000);
     <% end %>
  <% end %>

  <% if user_signed_in? && !current_user.is_completed %>
     <%= content_tag "script", id: "acc",type: "text/javascript",data: t(:completed_account_msg) do %>
       var msg = $('#acc').attr('data');
       showFlashMessage(msg, 'success', 5000);
     <% end %>
  <% end %>


	<%= yield %>

  <section id="contato" class="footer-section">
    <footer  class="footer clearfix">
        <div class="footer-bottom">
            <div class="container-fluid">
                <div class="col-md-4">
                    <p class="muted credit">
                    Copyright Â© Himeneu <%= Time.now.year %>. All right reserved.
                  </p>
                </div>
                <div class="col-md-4 text-center">
                    <a href="/privacy">Politica de privacidade</a>
                </div>
                <% if current_page?(root_path) %>
                  <div class="col-md-4">
                      <div class="pull-right">
                          <span class="glyphicon glyphicon-envelope"></span>
                            contato@himeneu.com
                          <div>
                              <span class="glyphicon glyphicon-phone"></span>
                                  +55 (62) 9931-2013
                          </div>
                          <div>
                              <span class="glyphicon glyphicon-phone"></span>
                              +55 (11) 99785-2285
                          </div>
                          <div>
                              <span class="glyphicon glyphicon-phone"></span>
                               +1 (801) 877-3719
                          </div>
                      </div>
                  </div>
                <% else %>
                   <div class="col-md-4">
                      <div class="pull-right">
                          <span class="glyphicon glyphicon-envelope"></span>
                            contato@himeneu.com
                      </div>
                    </div>
                <% end %>
            </div>
        </div>
    </footer>
  </section>
  <% if Rails.env.production? %>
