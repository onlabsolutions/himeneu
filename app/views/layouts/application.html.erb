<!DOCTYPE html>
<html>
<head>
    <title><%= t(:title) %></title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="ONLab">
    <meta name="description" content="Himeneu é a solução para facilitar o seu casamento. Encontre os melhores profissionais para fazer seu casamento ainda mais especial.">
    <meta name="keywords" content="casamento, fotografia, fotografia de casamento ,cerimonial, bolo de casamento, wedding">
    <meta property="og:image" content="http://www.himeneu.com/assets/backhome_mobile.jpg" />
    <meta property="og:url" content="http://www.himeneu.com"/>
    <%= favicon_link_tag 'favicon.ico' %>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body ng-app="App" class='<%= controller.controller_name %> fuelux'>
  <div class='notifications top-right'></div>
     <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to root_path, :class => "navbar-brand" do %>
                    Himeneu
                   <% if  user_signed_in?  %> <i class="fa fa-home"></i> <% end %>
                <% end %>

            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <% if  user_signed_in?  %>
                        <% if current_user.is_completed %>
                            <% if can? :search, Customer %>
                              <li><%= link_to customers_path do %>
                                     <%= t(:bride) %>
                                     <i class="fa fa-heart"></i>
                                  <% end %>
                              </li>
                            <% end %>
                            <% if can? :search, Provider %>
                              <li><%= link_to providers_path do %>
                                      <%= t(:workers) %>
                                      <i class="fa fa-users"></i>
                                  <% end %>
                              </li>
                            <% end %>
                        <% end %>
                        <li><%= link_to redirect_to_profile do %>
                                <%= t(:my_profile) %>
                                <span class="glyphicon glyphicon-user"></span>
                            <% end %>
                        </li>
                        <li><%= link_to destroy_user_session_path,  method: :delete do %>
                                <%= t(:logout).capitalize %>
                                <span class="glyphicon glyphicon-off"></span>
                            <% end %>
                        </li>
                    <% else %>
                        <li><%= link_to 'Nossos Clientes',  dashboard_path+"#clients"%> </li>
                        <li><%= link_to 'Contato', dashboard_path+"#contato"%></li>
                        <li><%= link_to t(:sign_up).capitalize, new_user_registration_path %></li>
                        <li><%= link_to t(:login).capitalize, new_user_session_path %></li>
                    <% end %>
                </ul>
            </div>
        </div>
    </nav>


  <% if flash[:notice] %>
     <%= content_tag "script", id: "msg",type: "text/javascript",data: flash[:notice] do %>
       var msg = $('#msg').attr('data');
       showFlashMessage(msg, 'bangTidy');
     <% end %>
  <% end %>

  <% if flash[:alert] %>
    <%= content_tag "script", id: "msg",type: "text/javascript",data: flash[:alert] do %>
       var msg = $('#msg').attr('data');
       showFlashMessage(msg, 'danger');
     <% end %>
  <% end %>



	<%= yield %>


    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-59347506-1', 'auto');
      ga('send', 'pageview');

    </script>
</body>

</html>
