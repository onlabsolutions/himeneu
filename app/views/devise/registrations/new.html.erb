<div class="container">
  <div class="row jumbo-signup">
    <div class='col-md-7 jumbo-signup-image'>
    </div>

    <div class='col-md-5 form-signup well'>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :class => "form-horizontal"}) do |f| %>
        <%= devise_error_messages! %>
        
        <div class="form-group">
          <%= f.label :email, :class => 'control-label col-md-3' %>
          <div class="col-md-9">
            <%= f.text_field :email, placeholder: :email, autofocus: true, :class => 'form-control input-sm ' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label t(:password), :class => 'control-label col-md-3' %>
          <div class="col-md-9">
            <%= f.password_field :password, autocomplete: "off", :class => 'form-control input-sm' %>
            <% if @validatable %> <span><p>(Minimo <%= @minimum_password_length %> digitos)</p></span><% end %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "Confirme a senha", :class => 'control-label col-md-3' %>
          <div class="col-md-9">
            <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control input-sm' %>
          </div>
        </div>     

         <div class="form-group" data-initialize="radio">
          <div class=" col-md-offset-3 col-md-9">
            <%= f.collection_radio_buttons :role_ids, Role.all, :id, :name ,{:selected => @user.role_ids} do |r|
              %>
              <%= r.label(:class => 'radio-inline') %>
              <%= r.radio_button %>
            <% end %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-offset-4 col-md-8">
            <%= f.submit t(:create_account).capitalize, :class => 'btn btn-hg btn-primary' %>
          </div>
        </div>

      <% end %>
      <div class="text-center bottom-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
