
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :class => "form-horizontal"}) do |f| %>

  <%= devise_error_messages! %>


  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :email, placeholder: :email, autofocus: true, :class => 'form-control' %>
    </div>
  </div>

   <div class="form-group" data-initialize="radio">
    <%= f.label "Tipo", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_radio_buttons :role_ids, Role.all, :id, :name ,{:selected => @user.role_ids} do |r|
        %>
        <%= r.label(:class => 'radio-inline') %>
        <%= r.radio_button %>
      <% end %>
    </div>
  </div>

  <div class="form-group">

    <%= f.label t(:password), :class => 'control-label col-lg-2' %>
    <% if @validatable %><i>(Minimo <%= @minimum_password_length %> digitos)</i><% end %>
    <div class="col-lg-10">
      <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Confirme a senha", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit "Salvar", :class => 'btn btn-primary' %>
      <%= link_to "Cancelar", root_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
<div class="text-center">
  <%= render "devise/shared/links" %>
</div>
