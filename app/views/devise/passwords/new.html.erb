<div class="container">
  <h2><%= t(:forgot_password) %></h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "form-inline" }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, :class => "form-control", placeholder: t(:email_hint)  %>
    </div>

    <div class="form-group">
      <%= f.submit t(:resend_password), class: "btn btn-default"  %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
