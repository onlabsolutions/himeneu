<div class="center span4 well">
	<legend><%= t(:sign_in) %></legend>
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <%= f.email_field :email, autofocus: true, class: "span4", placeholder: "email"%>
	  <%= f.password_field :password, autocomplete: "off", class: "span4", placeholder: t(:password) %>
	  <% if devise_mapping.rememberable? -%>
	    <div class="checkbox"><%= f.check_box :remember_me %> <%= f.label t(:remember_me) %></div>
	  <% end -%>
	  <div><%= f.submit t(:login).capitalize, class: "btn btn-primary btn-block" %></div>
	<% end %>
	<%= render "devise/shared/links" %>
</div>


