<div class="modal-body">
   	<div class="well">
   		
	<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => "form-horizontal"}) do |f| %>
	    <fieldset>
	    	<div id="legend">
				<legend class=""><%= t(:sign_in) %></legend>
			</div>
		<div class="form-group">
			 <%= f.label :email, class: "control-label col-lg-2" %>
			 <div class="col-lg-10">
	 		 	<%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "email"%>
	 		</div>
	  	</div>
  		<div class="form-group">
			<%= f.label t(:password), class: "control-label col-lg-2" %>
			<div class="col-lg-10">
				<%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: t(:password) %>
			</div>
		</div>
	  
	  <% if devise_mapping.rememberable? -%>
	  	<div class="form-group">
	  		<%= f.label t(:remember_me), class: "control-label col-lg-2" %>
	    	<div class="col-lg-10">
	    		<%= f.check_box :remember_me, class: "checkbox" %> 
	    	</div>
	    </div>
	  <% end -%>

	  <div class="form-group">
		<div class="col-lg-offset-2 col-lg-10">
			<%= f.submit t(:login).capitalize, class: "btn btn-success" %>
		</div>
	  </div>
	
     <fieldset>
	<% end %>
	<%= render "devise/shared/links" %>

	</div>
</div>






