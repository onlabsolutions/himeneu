 <div class="container-fluid">
   <div class="row">
      <div class="col-md-7 col-md-offset-3">
          <div class="panel panel-default">
              <div class="panel-heading">
                  <strong class=""><%= t(:sign_in) %></strong>
              </div>
              <div class="panel-body">
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => "form-horizontal"}) do |f| %>
                      <div class="form-group">
                          <label for="email" class="col-sm-3 control-label">Email</label>
                          <div class="col-sm-9">
                              <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "email"%>
                          </div>
                      </div>
                      <div class="form-group">
                          <label for="password" class="col-sm-3 control-label">
                              <%= t(:password) %>
                          </label>
                          <div class="col-sm-9">
                              <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: t(:password) %>
                          </div>
                      </div>
                      <% if devise_mapping.rememberable? -%>
                          <div class="form-group">
                              <div class="col-sm-offset-3 col-sm-9">
                                  <div class="checkbox">
                                      <label class="">
                                          <%= t(:remember_me) %>
                                          <%= f.check_box :remember_me %>
                                      </label>
                                  </div>
                              </div>
                          </div>
                      <% end %>
                      <div class="form-group last">
                          <div class="col-sm-offset-3 col-sm-9">
                              <%= f.submit t(:login).capitalize, class: "btn btn-success btn-sm" %>
                              <button type="reset" class="btn btn-default btn-sm"><%= t('links.cancel') %></button>
                          </div>
                      </div>
                  <% end %>
              </div>
              <div class="panel-footer">
                  <%= render "devise/shared/links" %>
              </div>
          </div>
      </div>
  </div>
</div>




